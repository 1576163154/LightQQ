<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp">

    <ImageView
        android:id="@+id/iv_friendlist_groupindicator"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/contraction"/>

    <TextView
        android:id="@+id/tv_friendlist_groupname"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/iv_friendlist_groupindicator"
        android:gravity="center_vertical"
        android:textColor="#0c0d0d"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_friendlist_group_quantity"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:text="37/55"
        android:textColor="#424242"/>
</RelativeLayout>
