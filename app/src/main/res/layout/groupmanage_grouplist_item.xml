<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_groupmanage_deletegroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/delete"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/tv_groupmanage_groupname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_toRightOf="@id/iv_groupmanage_deletegroup"
            android:gravity="center_vertical"
            android:textColor="@color/blackfont"
            android:text="测试"
            android:textSize="17sp"
            android:layout_weight="0.8"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/threehorizontallines"
            android:layout_weight="0.1"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/textHintGray"/>
</LinearLayout>

